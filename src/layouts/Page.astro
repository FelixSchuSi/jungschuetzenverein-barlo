---
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import settings from '../config/settings';
import { footerLists, footerSocials } from '../config/footer';

export interface Props {
	seo?: BaseHeadProps;
}

import { nav } from '../config/nav.js';
import { BASE_PATH_WITHOUT_DOMAIN } from '../../base-path.mjs';
import { Header, Button, Footer } from '../components/odyssey-theme';
import { Icon } from 'astro-icon/components';

const { seo } = Astro.props;
---

<Layout {...seo}>
	<Header rightMenu navData={nav} slot="header">
		<span slot="logo">
			<Logo />
		</span>

		<Button
			slot="action-item"
			href={BASE_PATH_WITHOUT_DOMAIN + '/termine'}
			customIcon
			>Termine
			<Fragment slot="icon">
				<Icon name="ic:baseline-chevron-right" />
			</Fragment>
		</Button>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer
		slot="footer"
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
		{footerLists}
		{footerSocials}
		copyrightName={settings.name}
	>
		<Logo slot="logo" />
	</Footer>
</Layout>
