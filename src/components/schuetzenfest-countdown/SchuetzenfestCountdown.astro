<h2 id="countdown"></h2>
<p>Bis dahin kannst du dir das in den Kalender eintragen:</p>
<script>
	const schuetzenfestStart = new Date('2025-09-19T18:00:00+02:00');

	function updateCountdown() {
		const now = new Date();
		let diffMs = schuetzenfestStart.getTime() - now.getTime();

		const el = document.getElementById('countdown');
		if (!el) return;

		if (diffMs <= 0) {
			diffMs = 0;
		}

		const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
		const diffHours = Math.floor(
			(diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
		);
		const diffMinutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
		const diffSeconds = Math.floor((diffMs % (1000 * 60)) / 1000);

		el.textContent = `Nur noch ${diffDays} Tage, ${diffHours} Stunden, ${diffMinutes} Minuten und ${diffSeconds} Sekunden bis zum SchÃ¼tzenfest!`;
	}

	updateCountdown();
	setInterval(updateCountdown, 1000); // jede Sekunde aktualisieren
</script>
