---
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';
import Carousel from '../../components/image-carousel/Carousel.astro';
import { fotosJungschuetzenfest2025 } from '../../../fotos/fotos_jungschuetzenfest_2025';

const seo = {
	title: 'Fotos Jungschützenfest 2025',
	description: 'Fotos Jungschützenfest 2025',
};

const images = fotosJungschuetzenfest2025.map(data => {
	return {
		srcS: data.srcS,
		srcL: data.srcL,
		alt: 'Foto vom Jungschützenfest: ' + data.name,
	};
});
---

<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>Fotos Jung<wbr />schützen<wbr />fest 2025</h1>
			<small>
				Du möchtest, dass ein Foto entfernt wird? Dann melde dich per Mail an
				f.schulzesindern@web.de
			</small>
		</div>
		<picture slot="image-container">
			<img
				src="https://iili.io/KN25six.webp"
				alt="Das Königspaar der Jungschützen 2025 inklusive Throndamen"
				id="home-hero-image"
			/>
		</picture>
	</HeroSection>

	<div id="carouselTargetList" class="container">
		{
			images.map((img, index) => {
				return (
					<a
						class="item"
						href={`/images?image=${index}`}
						data-carousel-index={index}
					>
						<img src={img.srcS} alt={img.alt} loading="lazy" />
					</a>
				);
			})
		}
	</div>

	<Carousel images={images} />
</Layout>

<style>
	.container {
		display: grid;
		grid-template-columns: repeat(4, minmax(100px, 293px));

		justify-content: center;
		grid-gap: 28px;
		margin: 0 auto;
		max-width: var(--container-max-width);
		padding: var(--container-padding);
		padding-top: 28px;
		padding-bottom: 28px;
	}

	.item > img {
		aspect-ratio: 1 / 1;
		object-fit: cover;
		width: 100%;
	}

	img.rotate-left-90 {
		transform: rotate(-90deg);
	}

	img.rotate-right-90 {
		transform: rotate(90deg);
	}

	@media (max-width: 1200px) {
		.container {
			grid-gap: 8px;
			grid-template-columns: repeat(3, minmax(100px, 293px));
		}
	}
</style>
