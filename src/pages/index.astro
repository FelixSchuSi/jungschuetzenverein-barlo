---
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
import { BASE_PATH_WITHOUT_DOMAIN } from '../../base-path.mjs';
import { Container, FeatureCard } from '../components/odyssey-theme';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<h2>Landing Pages</h2>
			<p>
				Use one of our landing pages to jumpstart your website or ad campaign.
			</p>
			<div class="feature-card__grid">
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/landing-pages/landing-1'}
					title="Landing Page 1"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/landing-1'}
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/landing-pages/landing-2'}
					title="Landing Page 2"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/landing-2'}
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Company Pages</h2>
			<p>
				Use one of our prebuilt company pages for your about page, contact page,
				legal pages, blog posts, etc.
			</p>
			<div class="feature-card__grid">
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/company/about'}
					title="About Page"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/about'}
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/company/contact'}
					title="Contact Page"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/contact'}
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/blog/'}
					title="Blog Page"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/blog'}
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN +
						'/blog/posts/remote-work-mental-health'}
					title="Blog Post"
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/blog-post'}
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/company/legal'}
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/legal'}
					title="Legal Page"
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Theme Pages</h2>
			<p>Learn more about how to set up and use the Odyssey Theme.</p>
			<div class="feature-card__grid">
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/theme/get-started'}
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/get-started'}
					title="Get Started"
				/>
				<FeatureCard
					href={BASE_PATH_WITHOUT_DOMAIN + '/theme/style-guide'}
					imgSrc={BASE_PATH_WITHOUT_DOMAIN +
						'/assets/images/home/screenshots/style-guide'}
					title="Style Guide"
				/>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
