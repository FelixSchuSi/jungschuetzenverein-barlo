].filter(termin => termin.date > tomorrow) as TerminProp[];
---

<Layout {seo}>
	<Container>
		<div class="root-full-width">
			<div class="root">
				<h2>Termine 2025</h2>
				{
					termine
						.filter(e => e.date.getFullYear() === 2025)
						.map(termin => <Termin termin={termin} />)
				}
				<h2>Termine 2026</h2>
				{
					termine
						.filter(e => e.date.getFullYear() === 2026)
						.map(termin => <Termin termin={termin} />)
				}
				<h2>Termine 2027</h2>
				{
					termine
						.filter(e => e.date.getFullYear() === 2027)
						.map(termin => <Termin termin={termin} />)
				}
			</div>
		</div>
	</Container>
	<br />
</Layout>

<style>
	.root-full-width {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}

	.root {
		display: flex;
		flex-direction: column;
		align-items: stretch;
		gap: 1rem;
	}

	h2 {
		margin-top: 2rem;
		margin-bottom: 0;
	}
</style>
