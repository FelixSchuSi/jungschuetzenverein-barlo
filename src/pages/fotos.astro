---
import Layout from '../layouts/Page.astro';
import HeroSection from '../components/sections/heros/HeroSection.astro';
import { BASE_PATH_WITHOUT_DOMAIN } from '../../base-path.mjs';
import { TextSection } from '../components/odyssey-theme';
import { Carousel } from 'astro-carousel';
import {
	fotosJungschuetzenfest2023MD,
	fotosJungschuetzenfest2023XL,
} from '../../fotos_jungschuetzenfest_2023';

const seo = {
	title: 'Fotos',
	description: 'Fotos',
};

const imagesXL = fotosJungschuetzenfest2023XL.map(url => {
	return {
		src: url,
		alt: 'Foto vom Jungschützenfest',
		format: 'webp',
		widths: [500],
		width: 500,
		height: 500,
	};
});

const imagesMD = fotosJungschuetzenfest2023MD.map(url => {
	return {
		src: url,
		alt: 'Foto vom Jungschützenfest',
		format: 'webp',
		widths: [500],
		width: 500,
		height: 500,
	};
});
---

<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>Fotos Jung<wbr />schützen<wbr />fest 2023</h1>
			<small>
				Du möchtest, dass ein Foto entfernt wird? Dann melde dich per Mail an
				f.schulzesindern@web.de
			</small>
		</div>
		<picture slot="image-container">
			<img
				src="https://iili.io/db1QvFs.md.jpg"
				alt="Astro Odyssee"
				id="home-hero-image"
			/>
		</picture>
	</HeroSection>

	<div id="carouselTargetList" class="container">
		{
			imagesMD.map((img, index) => {
				return (
					<a class="item" href={`/?image=${index}`} data-carousel-index={index}>
						<img src={img.src} alt={img.alt} loading="lazy" />
					</a>
				);
			})
		}
	</div>

	<Carousel images={imagesXL} />
</Layout>

<style>
	.container {
		display: grid;
		grid-template-columns: repeat(4, minmax(100px, 293px));

		justify-content: center;
		grid-gap: 28px;
		margin: 0 auto;
		max-width: var(--container-max-width);
		padding: var(--container-padding);
		padding-top: 28px;
		padding-bottom: 28px;
	}

	.item > img {
		aspect-ratio: 1 / 1;
		object-fit: cover;
	}

	@media (max-width: 1200px) {
		.container {
			grid-gap: 8px;
			grid-template-columns: repeat(3, minmax(100px, 293px));
		}
	}
</style>
